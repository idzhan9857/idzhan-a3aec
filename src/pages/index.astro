            animation: noteIn 0.5s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
            cursor: pointer;
            user-select: none;
            z-index: 10;
            font-size: 14px;
            line-height: 1.4;
            text-align: center;
        }

        .note:hover {
            transform: scale(1.08) !important;
            transition: transform 0.25s ease !important;
        }

        @keyframes noteIn {
            from {
                opacity: 0;
                transform: scale(0.4) rotate(-5deg);
            }
            to {
                opacity: 1;
                transform: scale(1) rotate(0deg);
            }
        }
    </style>
</head>

<body>
    <!-- Á§ºÁâ©ÂºπÁ™ó -->
    <div class="popup" id="giftPopup">
