            "Â•ΩÂ•ΩÁà±Ëá™Â∑±",
            "ÊØèÂ§©ÈÉΩË¶ÅÂÖÉÊ∞îÊª°Êª°",
            "Â≠¶‰ºöÁà±Ëá™Â∑±ÔºåÊâçËÉΩÊõ¥Â•ΩÂú∞Áà±Âà´‰∫∫",
            "ÈáëÊ¶úÈ¢òÂêç",
            "Âà´Â§™Á¥ØÂï¶ÔºåÂÅ∂Â∞îÂÅ∑Êáí‰πüÂ•Ω",
            "Â§©ÂÜ∑‰∫ÜÔºåÂ§öÁ©øË°£Êúç",
            "È°∫È°∫Âà©Âà©",
            "‰øùÊåÅÂæÆÁ¨ëÂëÄ",
            "‰øùÊåÅÂ•ΩÂøÉÊÉÖ",
            "ÊàëÊÉ≥‰Ω†‰∫Ü",
            "ÁèçÊÉúÊØè‰∏ÄÂàª",
            "‰ªäÂ§©ËøáÂæóÂºÄÂøÉÂòõ",
            "ÊúüÂæÖ‰∏ã‰∏ÄÊ¨°ËßÅÈù¢",
            "Âà´ÁÜ¨Â§ú",
            "ÊàëÂñúÊ¨¢‰Ω†‚ù§Ô∏è"
        ];

        const colors = [
            "#e6f7f0",
            "#fce6e0",
            "#f0e6f7",
            "#e0f0f7",
            "#f7f0e0",
            "#fff0f6",
            "#f0f7ff"
        ];

        // ÈôêÂà∂ÂêåÊó∂Â≠òÂú®ÁöÑ‰æøÁ≠æÊï∞ÈáèÔºåÈò≤Ê≠¢Âç°È°ø
        const maxNotes = 60;
        let noteCount = 0;

        document.getElementById("openGift").addEventListener("click", function () {
            document.getElementById("giftPopup").style.display = "none";
            // ÂÆöÊó∂ÁîüÊàê
            setInterval(createNote, 140);
        });

        function createNote() {
            // Êï∞ÈáèÈôêÂà∂
            if (noteCount >= maxNotes) return;

            const note = document.createElement("div");
            note.className = "note";
            note.textContent = notes[Math.floor(Math.random() * notes.length)];
            
            // ÈöèÊú∫ËÉåÊôØËâ≤
            note.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            
            // ÈöèÊú∫‰ΩçÁΩÆÔºàÁïôÂá∫ËæπË∑ùÔºå‰∏çË¥¥ËæπÔºâ
            const w = window.innerWidth;
            const h = window.innerHeight;
            const noteW = 130 + Math.random() * 40; // ÈöèÊú∫ÂÆΩÂ∫¶
            const noteH = 50 + Math.random() * 20;

            note.style.width = noteW + "px";
            note.style.minHeight = noteH + "px";
            note.style.left = Math.random() * (w - noteW - 20) + 10 + "px";
            note.style.top = Math.random() * (h - noteH - 20) + 10 + "px";

            // ËΩªÂæÆÈöèÊú∫ÊóãËΩ¨
            const rot = (Math.random() - 0.5) * 6;
            note.style.transform = `rotate(${rot}deg)`;

            document.body.appendChild(note);
            noteCount++;

            // ÁÇπÂáª‰æøÁ≠æÁõ¥Êé•Ê∂àÂ§±
            note.addEventListener("click", () => {
                removeNote(note);
            });

            // Ëá™Âä®Ê∂àÂ§±
            setTimeout(() => {
                removeNote(note);
            }, 6000);
        }

        // Áªü‰∏ÄÁßªÈô§ÂáΩÊï∞
        function removeNote(note) {
            if (!note) return;
            note.style.opacity = "0";
            note.style.transition = "opacity 0.4s ease, transform 0.4s ease";
            note.style.transform += " scale(0.8)";
            setTimeout(() => {
                if (note.parentNode) note.parentNode.removeChild(note);
                noteCount = Math.max(0, noteCount - 1);
            }, 400);
        }
    </script>
